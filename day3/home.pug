doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous")
    body
        div(class="container")
            h1 Heroes List 
            hr
            table(class="table")
                thead
                    tr
                        th Sl#
                        th Title
                        th First Name
                        th Last Name
                        th Power
                        th City
                tbody 
                    tr
                        each user in users 
                            td #
                            td= user.title
                            td= user.firstname
                            td= user.lastname
                            td= user.power
                            td= user.city
